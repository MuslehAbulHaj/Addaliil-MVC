@model Shop

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.Name - @Model.DisplayName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <input asp-for="Name" type="hidden" />
            <input type="hidden" name="shopName" id="shopName" value="@Model.Name" />

            <div class="form-floating p-1">
                <input asp-for="DisplayName" class="form-control border-0 shadow" />
                <label asp-for="DisplayName" class="ms-2"></label>
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-floating p-1">
                <input asp-for="Description" class="form-control border-0 shadow" />
                <label asp-for="Description" class="ms-2"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
