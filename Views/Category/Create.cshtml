@model Addaliil_MVC.Models.Category

@{
    ViewData["Title"] = "Create";
}


<div class="row justify-content-center">
    <div class="border p-3 mt-4 col-md-6 ">
        <!-- this make fields to take full width when it's mobile view and 6 when it's normal wide screen' -->
        <div class="row pb-2">
            <h2>Create Category</h2>
        </div>
        <form asp-action="Create">
            <div class="">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="row pt-5">
                    <input type="submit" value="Create" class="btn btn-success col-6 col-md-3 mx-3" />
                    <a asp-action="Index" class="btn btn-outline-success col-6 col-md-3">Back to List</a>
                </div>

            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
